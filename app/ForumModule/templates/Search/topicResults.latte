{block content}

<div class="col-sm-12">
    <div class="float-left">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{link Index:default}">{_menu_index}</a>
            </li>
            <li class="breadcrumb-item">
                <a href="{link Search:default}">{_menu_search}</a>
            </li>
            <li class="breadcrumb-item active">{_menu_topic}</li>
        </ol>
    </div>
</div>

{control searchTopicForm}

{if count($topicData)}
    <div class="col-sm-12 main">
        <table class="table table-striped table-bordered list-table table-hover table-fixed-header table-last-center">   
            <thead>
                <tr>
                    <th>{_topic_id}</th>
                    <th>{_topic_name}</th>
                </tr>
            </thead>   
            <tbody>
                {foreach $topicData as $data}
                    <tr>
                        <td><a href="{link Post:all, $data->topic_forum_id, $data->topic_id}">{$data->topic_id}</a></td>
                        <td>{$data->topic_name}</td>
                    </tr>
                {/foreach}
            </tbody>
        </table>
    </div>
{/if}

<div class="col-sm-12">
    <div class="float-left">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{link Index:default}">{_menu_index}</a>
            </li>
            <li class="breadcrumb-item">
                <a href="{link Search:default}">{_menu_search}</a>
            </li>
            <li class="breadcrumb-item active">{_menu_topic}</li>
        </ol>
    </div>
</div>
            
{/block}