{block content}

    <div class="col-sm-12">
        <div class="float-left">
            {control breadCrumbUserResults}
        </div>
    </div>

    <div class="col-sm-12 main">
        {control searchUserForm}
    </div>

    {if count($users)}
        <div class="col-sm-12 main">
            <table class="table table-striped table-bordered list-table table-hover table-fixed-header table-last-center">
                <thead>
                    <tr>
                        <th>{_user_id}</th>
                        <th>{_user_name}</th>
                    </tr>
                </thead>
                <tbody>
                    {foreach $users as $userData}
                        <tr>
                            <td><a href="{link User:profile, $userData->user_id}">{$userData->user_id}</a></td>
                            <td>{$userData->user_name}</td>
                        </tr>
                    {/foreach}
                </tbody>
            </table>
        </div>
    {/if}

    <div class="col-sm-12">
        <div class="float-left">
            {control breadCrumbUserResults}
        </div>
    </div>

{/block}
