{block content}
<div class="col-sm-12"> 
    <div class="float-right">
        <a class="btn btn-primary" href="{link Roles:edit}">
            <i class="fa fa-plus" aria-hidden="true"></i>
            {_role_add}
        </a>
    </div>
</div>

<div class="col-sm-12 main">
    <table class="table table-striped table-bordered list-table table-hover table-fixed-header table-last-center">
        <thead>
            <tr>
                <th>{_role_id}</th>
                <th>{_role_name}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {foreach $items as $item}
                <tr>
                    <td>
                        <a href="{link Roles:edit, $item->role_id}">{$item->role_id}</a>
                    </td>
                    <td>{$item->role_name}</td>
                    <td>
                        <a href="{link Roles:delete, $item->role_id}">{_delete}</a>
                    </td>
                </tr>
            {/foreach}
        </tbody>
    </table>
</div>
{/block}
